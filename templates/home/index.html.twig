{% extends 'base.html.twig' %}

{% block title %}Linkedin
{% endblock %}

{% block body %}
	<div class="row">
		{% for offre in data %}

			<div class="col-xl-3 col-lg-6 order-lg-1" style="width: 18rem;margin-top: 10px;">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">{{offre.title}}</h5>
						{% set desp = offre.description | slice(0, 100) ~ ' ...' %}
						<p class="card-text">{{ desp }}</p>
						<p class="card-text">
							Contract :
							{{ offre.contrat }}</p>

						<p class="card-text">Temp :
							{{ offre.TypeContrat }}</p>
						<p class="card-text">Ville :
							{{ offre.ville }}</p>


						<a href="/offres/{{ offre.id }}" class=" btn btn-info">Voir offre


						</a>
					</div>
				</div>
			</div>
		{% endfor %}

	</div>
{% endblock %}
